<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.museepourtous.Description_Bardo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Title_des_bardo"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:text="@string/Title_des_bardo" />

        <TextView
            android:id="@+id/des_bardo"
            android:layout_width="match_parent"
            android:layout_height="314dp"
            android:text="@string/des_bardo" />

        <Button
            android:id="@+id/btn_bardo_des"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:text="@string/btn_bardo_des" />

    </LinearLayout>





</LinearLayout>
